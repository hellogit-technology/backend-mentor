<div class="d-flex align-items-center ms-1 ms-lg-3" id="kt_header_user_menu_toggle">
    <!--begin::Menu wrapper-->
    <div class="cursor-pointer symbol symbol-circle symbol-30px symbol-md-40px" data-kt-menu-trigger="click" data-kt-menu-attach="parent" data-kt-menu-placement="bottom-end" data-kt-menu-flip="bottom">
        <img alt="Pic" crossorigin="anonymous" src="<% if (typeof(profileSession) !== 'undefined') { %><%= profileSession.photo %><% } %>" />
    </div>
    <!--begin::Menu-->
    <div class="menu menu-sub menu-sub-dropdown menu-column menu-rounded menu-gray-600 menu-state-bg-light-primary fw-bold py-4 fs-6 w-275px" data-kt-menu="true">
        <!--begin::Menu item-->
        <div class="menu-item px-3">
            <div class="menu-content d-flex align-items-center px-3">
                <!--begin::Avatar-->
                <div class="symbol symbol-50px symbol-circle me-5">
                    <img alt="Logo" crossorigin="anonymous" src="<% if (typeof(profileSession) !== 'undefined') { %><%= profileSession.photo %><% } %>" />
                </div>
                <!--end::Avatar-->
                <!--begin::Username-->
                <div class="d-flex flex-column">
                    <div class="fw-bolder d-flex align-items-center fs-5">
                        <% if (typeof(profileSession) !== 'undefined') { %><%= profileSession.name %><% } %>
                    </div>
                    <span class="badge badge-light-success fw-bolder fs-8 px-2 py-1 ms-2">
                        <% if (typeof(profileSession) !== 'undefined') { %>
                            <% if (profileSession.role === 0) { %>
                                Admin Greenwich HCM
                            <% } else { %>
                                Manager Greenwich HCM
                            <% } %> 
                        <% } %>
                    </span>
                    <a href="#" class="fw-bold text-center text-muted text-hover-primary fs-7">
                        <% if (typeof(profileSession) !== 'undefined') { %>
                            <%= profileSession.email %>
                        <% } %>
                    </a>
                </div>
                <!--end::Username-->
            </div>
        </div>
        <!--end::Menu item-->
        <!--begin::Menu separator-->
        <div class="separator my-2"></div>
        <!--end::Menu separator-->
        <!--begin::Menu item-->
        <div class="menu-item px-5">
            <a href="admin/overview.html" class="menu-link px-5">Thông tin cá nhân</a>
        </div>
        <!--end::Menu item-->
        <!--begin::Menu item-->
        <div class="menu-item px-5 my-1">
            <a href="" data-bs-toggle="modal" data-bs-target="#pdp_edit_info" class="menu-link px-5">Thay đổi thông tin cá nhân</a>
        </div>
        <!--end::Menu item-->                                        
        <!--begin::Menu separator-->
        <div class="separator my-2"></div>
        <!--end::Menu separator-->
        <!--begin::Menu item-->
        <div class="menu-item px-5">
            <a href="/auth/logout" class="menu-link px-5">Đăng xuất</a>
        </div>
        <!--end::Menu item-->
    </div>
    <!--end::Menu-->
    <!--end::Menu wrapper-->
</div>